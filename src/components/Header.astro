<style>
  header {
    margin: 0;
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }
  nav a {
    color: var(--color-fg-default);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: underline;
  }

  .header-avatar {
    margin-right: 0.5rem;
  }

  .avatar {
    padding: 0;
    margin-bottom: 0;
    margin: 0.5rem;
    margin-left: 0;
    width: 4rem;
    height: auto;

    border-radius: 50% !important;
    box-shadow: 0 0 0 1px var(--color-avatar-border);
  }

  .header {
    display: flex;
    width: 100%;
  }

  .header-links {
    width: 100%;
  }

  @media print {
    .header {
      h3 {
        font-size: 1.25rem;
      }
    }

    .avatar {
      width: 3.8rem;
    }

    .header-links {
      text-align: center;
    }

    .header-links a,
    .markdown-body a {
      color: var(--color-fg-default);
    }
  }
</style>
